{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Créer mon compte professionnel</h1>
    {% if partNumber == 0 %}
        <form method="post">
            <div>
                <label>Adresse de messagerie</label>
                <input type="email"/>
            </div>
            <br>
            <div>
                <label>Identifiant</label>
                <input type="text"/>
            </div>
            <br>
            <div>
                <label>Mot de passe</label>
                <input type="password"/>
            </div>
            <div>
                <input type="submit" value="Valider" />
            </div>
        </form>
    {% elseif partNumber == 1 %}
        <form method="post">
            <p>Vous avez reçu un lien de confirmation, veuillez consulter votre messagerie.</p>
            <button type="submit">Suivant</button>
        </form>
    {% elseif partNumber == 2 %}
        <form method="post">
            <p>Offres</p>
        </form>
    {% endif %}
</div>
{% endblock %}
